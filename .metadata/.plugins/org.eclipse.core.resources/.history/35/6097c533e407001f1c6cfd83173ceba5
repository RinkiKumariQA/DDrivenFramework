package Inheritance;

import java.util.Scanner;

public class Sum_natural_Even_no {

	public static void main(String[] args) 
	{
		 Scanner sc=new Scanner(System.in);
         System.out.println("Enthe the  value of x=");
         int x=sc.nextInt();
         int sum=0;
         for(int i=1;i<=x;i++)
         {
        	 sum=sum+(2*i);
         }
           System.out.println(sum);
	}

}
